@{
    <head>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
        <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    </head>

    <main role="main">


    <div class="container d-flex align-items-center justify-content-center text-center mb-5 ">
            <button type="button" class="myb1" data-toggle="modal" data-target="#logModal">Login</button>
  
        <div class="modal fade" id="logModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">



                <div class="modal-dialog" role="document">
                    @if (TempData["Error"] != null)
                    {
                        <div class="col-md-12 alert alert-danger">
                            <span><b>Sorry!</b> - @TempData["Error"]</span>
                        </div>
                    }
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">تسجيل الدخول :</h5>



                        </div>
                        <form asp-action="Login">

                            <div class="mb-3">
                                <label asp-for="Email" for="exampleInputEmail1" class="form-label">البريد الالكتروني</label>
                                <input asp-for="Email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="example@example.com">
                                <div id="emailHelp" class="form-text">.لن نشارك الايميل الخاص بك مع اي جهة خارجية</div>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Password" for="exampleInputPassword1" class="form-label">كلمة السر</label>
                                <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1" placeholder="أدخل كلمة السر">
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <input type="checkbox" onclick="myFunction()">Show Password
                                <script>
                                    function myFunction() {
                                        var x = document.getElementById("exampleInputPassword1");
                                        if (x.type === "password") {
                                            x.type = "text";
                                        } else {
                                            x.type = "password";
                                        }
                                    }
                                </script>
                            </div>


                       <button type="submit" class="myb1">إدخال</button>
                            <button type="button" class="myb1" data-toggle="modal" data-dismiss="modal" data-target="#signModal">signin</button>
                        <!--<button type="SignUp" class="btn btn-primary">حساب جديد</button>-->
                    </form>

                    </div>
                </div>
            </div>
        </div>

    </main>
}

