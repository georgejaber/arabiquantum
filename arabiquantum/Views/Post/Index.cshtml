<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
</head>
<main role="main">
    <div class="container">
        @{
            


            foreach (var post in Model)
            {
                <div class="container ">
                    <div style="border-radius: 0px ; border-color: #235074" class="card w3-panel w3-border w3-hover-border-blue">
                        <div class="card-body">
                            <div class="row justify-content-between">
                  


                                <div class="col-2"> <h4  class="card-title">السؤال</h4> </div>
                                <div class="col-2 "> <h6 class="card-title ">@post.DateTime</h6> </div>
                            </div>

                            <p  class="card-text">@post.text</p>

                            <a href="#" type="button" style="background-color:#43b3c6 ; border-radius: 0px ; margin-right:90%" class="btn btn-primary ">رؤية المزيد</a>
                        </div>
                    </div>
                </div>
}}

</div>
</main>