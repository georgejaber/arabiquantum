<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
</head>
<main role="main">
    <div class="container">
        @{
            


            foreach (var post in Model)
            {
                <div class="container ">
                    <div class="card w3-panel w3-bottombar w3-border-white w3-hover-border-black">
                        <div class="card-body">
                            <div class="row justify-content-between">
                         
                                <div class="col-2 "> <h6 class="card-title ">@post.DateTime</h6> </div>


                                <div class="col-2"> <h4 style="text-align:right:" class="card-title">السؤال</h4> </div>
                               
                            </div>

                            <p style="text-align:right" class="card-text">@post.text</p>

                            <a href="#" type="button" style="background-color:#43b3c6 " class="btn btn-primary w3-round-small ">رؤية المزيد</a>
                        </div>
                    </div>
                </div>
}
}

      

</div>
</main>