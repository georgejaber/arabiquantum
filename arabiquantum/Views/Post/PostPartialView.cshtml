@model Post
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    <head>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
        <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

    </head>
    <main role="main" style=" margin-top:3.87%;">

        <div class="container d-flex align-items-center justify-content-center text-center mb-5 ">
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">إنشاء سؤال :</h5>

                </div>
                <form method="post" asp-controller="Post" asp-action="create">
                <div class="modal-body">
                    

                        <div class="form-group">
                            <textarea asp-for="text" class="form-control" id="message-text"></textarea>
                        </div>
                   
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">إغلاق</button>
                    <button type="submit" class="btn btn-primary" style="margin-right:0;">أنشر</button>
                </div>
                </form>

            </div>
        </div>
    </div>
        </div>
    </main>
}
