@model Comment
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
</head>
@{
    <section>

        <div  class="card container ">
            <div style="margin-bottom:6% ; border-radius: 0px " class="card-body">

                <div class=" align-items-center">

               
                   

                    @using (Html.BeginForm("create", "comment", FormMethod.Post))
                                {

                            <div class="card-footer py-3 border-0" style="background-color: #FFFF;">
                            <div>
                                <h6 class="fw-bold text-primary mb-1">السؤال</h6>
                                <p class="text-muted small mb-0">@ViewData["postdate"]</p>
                            </div>

                            <div>
                                <p class="mt-3 mb-4 pb-2">@ViewData["posttext"]</p>
                            </div>  

                                <div class="d-flex flex-start w-100">
                                    <div class="form-outline w-100">

                                        @Html.TextAreaFor(c=> c.Text,new {style = "background: #fff; width:80% ;  position: absolute; top:55% ; left:17.8%;  border-radius: 0px", rows="1", @class ="form-control", id = "textAreaExample"})

                                        @Html.Hidden("postid", (object)ViewBag.postid)


                                    </div>
                                </div>

                                <div style="position: absolute; top:70%" class="float-end mt-2 pt-1">

                                    <button type="submit" class="myb1 ">تعليق</button>
                                    <button type="button" class="myb2">الغاء</button>

                                </div>

                            </div class="modal-footer">
                        }
  
                 
                  
                </div>

            </div>


        </div>




    </section>
}
