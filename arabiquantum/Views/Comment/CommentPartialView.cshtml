@model arabiquantum.ViewModels.CreateCommentViewModel
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
</head>
@{
    
          <div class="row">
        <div style="border-radius: 0px" class="card container col-12 ">
            <div style="margin-bottom:1% ; border-radius: 0px " class="card-body">

                <div style="border-radius: 0px" class=" align-items-center">

                  <form method="post", asp-controller="comment" asp-action="create" enctype="multipart/form-data" >
                                
                            <div class="card-footer py-3 border-0" style="background-color: #FFFF; border-radius: 0px">

                            <div>
                                <h6 class="fw-bold  mb-1">@Model.PostUsername</h6>
                                <p class="text-muted small mb-0">@Model.PostDateTime</p>
                            </div>

                            <div>
                                <p class="mt-3 mb-4 pb-2">@Model.PostText</p>
                            </div>                                

                            </div class="modal-footer">
                  </form>     
                  
                </div>
            </div>
        </div>


</div>

   
}
